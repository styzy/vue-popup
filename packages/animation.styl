useAnimation()
	&.animation-fade
		&.v-enter-active
			animation-name fadeIn
		&.v-leave-active
			animation-name fadeOut
	&.animation-scale
		&.v-enter-active
			animation-name scaleIn
		&.v-leave-active
			animation-name scaleOut
	&.animation-fly
		&.v-enter-active
			animation-name flyIn
		&.v-leave-active
			animation-name flyOut
@keyframes fadeIn
	from
		opacity 0
	to
		opacity 1
@keyframes fadeOut
	from
		opacity 1
	to
		opacity 0
@keyframes scaleIn
	0%
		transform scale(0)
	100%
		transform scale(1)
@keyframes scaleOut
	from
		transform scale(1)
	to
		transform scale(0)
@keyframes flyIn
	from
		transform translateY(-100vh)
	to
		transform translateY(0)
@keyframes flyOut
	from
		transform translateY(0)
	to
		transform translateY(-100vh)